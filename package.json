{
  "name": "xtranslate-website",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit --watch",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "prisma:refresh-api-client": "prisma generate",
    "prisma:migration-scheme-updated": "prisma migrate dev && prisma db seed",
    "prisma:deploy": "prisma generate && prisma migrate deploy && prisma db seed",
    "prisma:wipe": "prisma migrate reset --force",
    "postinstall": "if [ \"$VERCEL\" = \"1\" ]; then npm run prisma:deploy; fi"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.0",
    "@fluent/bundle": "^0.18.0",
    "@next/third-parties": "^15.1.3",
    "@prisma/client": "^6.8.2",
    "@vercel/analytics": "^1.4.1",
    "classnames": "^2.5.1",
    "marked": "^15.0.11",
    "next": "^15.3.1",
    "next-auth": "^5.0.0-beta.27",
    "openai": "^4.98.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "stripe": "^18.1.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "prisma": "^6.8.2",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
